<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:weightSum="11"
    tools:context=".SelectJointActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:layout_height="0dp">

    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvSteps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:id="@+id/lastSteps"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Walked 0 steps in last 24 hours"
            />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
     android:layout_weight="2"
        android:padding="5dp"
        android:background="@drawable/list_back"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="100dp"

            android:layout_weight="2"
            android:src="@drawable/hand"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="@drawable/list_back"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            android:layout_weight="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Hands"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:textSize="35dp"
                android:gravity="center_vertical"
                android:weightSum="10"
                android:layout_weight="5"
                >
                <Button
                android:layout_width="0dp"
                android:text="Left"
                android:textSize="10dp"
                android:onClick="lefthandImage"
                android:textColor="@color/colorTextView"
                android:background="@drawable/button_selector_blue"
                android:layout_height="35dp"
                android:layout_weight="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:text="Right"
                    android:textSize="10dp"
                    android:layout_weight="5"
                    android:onClick="righthandImage"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:background="@drawable/list_back"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:src="@drawable/elbow"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            android:layout_weight="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Elbows"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:textSize="35dp"
                android:gravity="center_vertical"
                android:weightSum="10"
                android:layout_weight="5"
                >
                <Button
                    android:layout_width="0dp"
                    android:text="Left"
                    android:textSize="10dp"
                    android:onClick="otherImages"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:text="Right"
                    android:textSize="10dp"
                    android:layout_weight="5"
                    android:onClick="otherImages"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_weight="2"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="@drawable/list_back"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:src="@drawable/knee"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            android:layout_weight="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Knees"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:textSize="35dp"
                android:gravity="center_vertical"
                android:weightSum="10"
                android:layout_weight="5"
                >
                <Button
                    android:layout_width="0dp"
                    android:text="Left"
                    android:textSize="10dp"
                    android:onClick="otherImages"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:text="Right"
                    android:textSize="10dp"
                    android:onClick="otherImages"
                    android:layout_weight="5"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
   android:layout_weight="2"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="@drawable/list_back"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:src="@drawable/shoulder"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            android:layout_weight="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Shoulders"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:textSize="35dp"
                android:gravity="center_vertical"
                android:weightSum="10"
                android:layout_weight="5"
                >
                <Button
                    android:layout_width="0dp"
                    android:text="Left"
                    android:textSize="10dp"
                    android:onClick="otherImages"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    />
                <Button
                    android:layout_width="0dp"
                    android:text="Right"
                    android:textSize="10dp"
                    android:onClick="otherImages"
                    android:layout_weight="5"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/button_selector_blue"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>